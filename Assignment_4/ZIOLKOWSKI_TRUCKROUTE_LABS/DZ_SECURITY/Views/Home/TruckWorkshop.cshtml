@model DZ_LAB1.Models.TruckWorkshop

@{
    ViewData["Title"] = "Add A Truck Workshop Order";
}

<h1>Truck Workshop</h1>

<h4>Make a new Truck Workshop Order: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TruckWorkshopAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkDescription" class="control-label"></label>
                <input asp-for="WorkDescription" class="form-control" />
                <span asp-validation-for="WorkDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkOrderCost" class="control-label"></label>
                <input asp-for="WorkOrderCost" class="form-control" />
                <span asp-validation-for="WorkOrderCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TruckId" class="control-label"></label>

                <select asp-for="TruckId" class="form-control" asp-items="@(new SelectList(ViewBag.ValidTruckIds))">
                    <option value="">Select a Truck ID</option>
                </select>
                <span asp-validation-for="TruckId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dashboard">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
