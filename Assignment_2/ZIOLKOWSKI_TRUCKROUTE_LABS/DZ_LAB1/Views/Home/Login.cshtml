@{
}

<div style="border: medium solid black;">
    <h2 class="display-7">Please login to the route management system below:</h2>
    <br />
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <span asp-validation-for="_EmailAddress" class="text-danger"></span>
            <label class="control-label">Please enter in your email:</label>
            <input type="email" asp-for="_EmailAddress" class="form-control" />

            <span asp-validation-for="_Password" class="text-danger"></span>
            <label class="control-label">Please enter in your password:</label>
            <input type="password" asp-for="_Password" class="form-control" />

            <br />
            <input type="submit" value="Login" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-primary">Create New Account</a>
        </div>
    </form>

</div></>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
